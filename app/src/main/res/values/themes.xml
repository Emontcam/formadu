<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EvaluableFinal" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:buttonStyle">@drawable/boton_azul</item>
        <item name="colorPrimary">@color/azulOscuro</item>
        <item name="colorSecondary">@color/azulOscuro</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:windowBackground">@color/azulFondo</item>
    </style>

    <style name="Theme.EvaluableFinal" parent="Base.Theme.EvaluableFinal" />

    <style name="textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/amarillo</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="botonEstilo" parent="Widget.AppCompat.Button">

        <item name="android:fontFamily">@font/peralta</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="textStyleBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="barraProgreso" parent="@android:style/Widget.ProgressBar.Horizontal">

    </style>

    <!-- Estilo personalizado para los botones del diÃ¡logo -->
    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Estilo personalizado para los radioButtons -->
    <style name="RadioButtonStyle">
        <item name="android:button">@drawable/circulo</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:checked">false</item>
        <item name="android:duplicateParentState">false</item>
        <item name="android:fontFamily">@font/peralta</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/azulOscuro</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>